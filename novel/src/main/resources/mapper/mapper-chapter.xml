<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace用于与DAO层的接口类进行绑定,这样我们无需实现DAO层的接口类,其接口类就能够自动的找到相关的SQL语句进行绑定实现-->
<mapper namespace="com.wang.novel.dao.ChapterDao">
    <select id="selectChapterByBookId" resultType="com.wang.novel.entity.Chapter" parameterType="Integer">
        select *
        from chapter
        where book_id = #{book_id};
    </select>
    <select id="selectChapterById" resultType="String" parameterType="Integer">
        select *
        from chapter
        where id = #{id};
    </select>
</mapper>