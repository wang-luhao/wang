<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wang.novelweb.Mapper.SaveUserBookDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.wang.novelweb.Entity.SaveUserBookEntity" id="saveUserBookMap">
        <result property="bookId" column="book_id"/>
        <result property="userId" column="user_id"/>
        <result property="chapterId" column="chapter_id"/>
        <result property="isSave" column="is_save"/>
        <result property="bookName" column="name"/>
    </resultMap>
<!--    List<SaveUserBookEntity> saveUserBookLists(Integer userId);-->
    <select id="saveUserBookLists" resultMap="saveUserBookMap" parameterType="integer">
        select * from save_user_book as a, book as b where a.user_id = #{userId} and a.book_id = b.id and a.is_save = 1
    </select>

</mapper>